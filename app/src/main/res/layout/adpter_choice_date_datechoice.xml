<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="72dp"
    android:layout_height="80dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adpter_choicedate_text_week"
        android:textSize="16sp"
        android:textColor="#000000"
        android:hint="今日"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adpter_choicedate_text_date"
        android:textSize="16sp"

        android:hint="04-01"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adpter_choicedate_text_bool"
        android:textSize="16sp"
        android:hint="过期"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>


</LinearLayout>