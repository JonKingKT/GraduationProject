<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_shadow">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/confirm_linear1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/confirm_patient"
            android:layout_marginStart="10dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:id="@+id/confirm_constralayout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_paient_name"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="汪洋"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/confirm_paient_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/background_shadow"
                android:layout_marginStart="10dp"
                android:id="@+id/confirm_linear2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/confirm_linear2"
                android:id="@+id/confirm_paient_id"
                android:textSize="16sp"
                android:text="123456"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp"/>
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="10dp"
                android:id="@+id/confirm_paient_edit"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:id="@+id/confirm_linear3"
            android:visibility="gone">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_add"
                android:id="@+id/confirm_imageview_paient_add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="20sp"
                android:textColor="#40E0D0"
                android:text="@string/confirm_patient_add"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/confirm_linear1"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#ffffff"
        android:layout_marginTop="12dp"
        android:id="@+id/confirm_constralayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:text="@string/confirm_visit_need"
            android:id="@+id/confirm_textview_visit_need"
            android:layout_marginStart="10dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_textview_visit_need"
            android:text="@string/confirm_checkobx1"
            android:id="@+id/confirm_checkbox_1"
            app:layout_constraintEnd_toStartOf="@id/confirm_checkbox_2"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/confirm_checkbox_1"
            app:layout_constraintTop_toBottomOf="@id/confirm_textview_visit_need"
            android:text="@string/confirm_checkobx2"
            app:layout_constraintEnd_toEndOf="@id/confirm_checkbox_3"
            android:id="@+id/confirm_checkbox_2"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/confirm_checkbox_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_textview_visit_need"
            android:text="@string/confirm_checkobx3"
            android:id="@+id/confirm_checkbox_3"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_checkbox_1"
            app:layout_constraintEnd_toStartOf="@id/confirm_checkbox_5"
            android:text="@string/confirm_checkobx4"
            android:id="@+id/confirm_checkbox_4"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/confirm_checkbox_4"
            app:layout_constraintEnd_toStartOf="@id/confirm_checkbox_6"
            app:layout_constraintTop_toBottomOf="@id/confirm_checkbox_1"
            android:text="@string/confirm_checkobx5"
            android:id="@+id/confirm_checkbox_5"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/confirm_checkbox_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_checkbox_1"
            android:text="@string/confirm_checkobx6"
            android:id="@+id/confirm_checkbox_6"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_constralayout2"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        app:layout_constraintStart_toStartOf="parent">


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>