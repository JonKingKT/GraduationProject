<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/back_black"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:id="@+id/btn_back"/>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginTop="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/hospital"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/username_Linear"
        android:background="@drawable/text_shadow">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:src="@mipmap/user_login"
        android:scaleType="centerInside"
        />

        <EditText
            android:hint="@string/hint_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textSize="23sp"
            android:id="@+id/username"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/password_Linear"
        android:background="@drawable/text_shadow">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:src="@mipmap/password"
            android:scaleType="centerInside"
            />

        <EditText
            android:hint="@string/hint_user_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textSize="23sp"
            android:id="@+id/password"
            />
    </LinearLayout>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_login"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_login_enter"
        android:padding="20dp"
        android:id="@+id/btn_login"/>




</LinearLayout>